{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update & Plot Project Chart",
            "type": "shell",
            // دستور به حالت اولیه با && برگشت
            "command": "git add . && git commit -m \"${input:commitMessage}\" && mdplan plot my-project.md",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "clear": true
            },
            // این بخش به VS Code می گوید که از Command Prompt استفاده کند
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "لطفا توضیح کوتاهی از تغییرات وارد کنید (مثلا: تکمیل فاز دوم)",
            "default": "به‌روزرسانی برنامه پروژه"
        }
    ]
}